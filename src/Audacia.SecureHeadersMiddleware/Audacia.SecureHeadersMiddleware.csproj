<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Audacia</Authors>
    <Company>Audacia</Company>
    <Product>Secure Headers Middleware</Product>
    <Description>A .NET middleware for injecting the recommended HTTP Headers for increased security.</Description>
    <AssemblyVersion>3.0.0.0</AssemblyVersion>
    <Version>3.0.0.0</Version>
    <FileVersion>3.0.0</FileVersion>
    <PackageIcon>package-icon.png</PackageIcon>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <WarningLevel>9999</WarningLevel>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\package-icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Audacia.CodeAnalysis" Version="1.1.22027.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="NetEscapades.AspNetCore.SecurityHeaders" Version="0.16.1" />
  </ItemGroup>

</Project>